<MyGridLayout>

    name:name
    #exceldata:exceldata
    apparat:apparat
    namesatz:namesatz
    ns_pw:ns_pw
    app_pw:app_pw
    voic_pw:voic_pw
    admin_pw:admin_pw

    MDBottomAppBar:
        MDToolbar:
            title: "KlickTel"
            icon: "transfer-down"
            type: "bottom"
            mode: "end"

    #MDGridLayout:
    MDBoxLayout:
        orientation: 'vertical'

        MDGridLayout:
            cols:2

            #Image:
            #    source: 'images/avaya9611.jpg'

            MDTextField:
                id: name
                multiline:False
                #size_hint: 1, 0.4
                #font_size: 20
                font_size: self.height - 15
                #halign: 'left'
                #valign: 'middle'
                input_type: 'number'
                input_filter: 'int'

            MDLabel:
                text: 'Apparatetyp'

            MDTextField:
                id: apparat
                hint_text: "Apparat Nummer"
                #size_hint: 0.5, 0.8
                #multiline:True
                multiline:False
                #size_hint_y: None
                #height: 200

            MDLabel:
                text: 'Anwender'

            MDTextField:
                id: namesatz
                #size_hint: 0.5, 0.8
                #multiline:True
                multiline:False
                #size_hint_y: None
                #height: 200

            MDLabel:
                text: 'N.Stellen PW'

            MDTextField:
                id: ns_pw
                #size_hint: 0.5, 0.8
                #multiline:True
                multiline:False
                #size_hint_y: None
                #height: 200

            MDLabel:
                text: 'App PW'

            MDTextField:
                id: app_pw
                multiline:False

            MDLabel:
                text: 'Voice PW'

            MDTextField:
                id: voic_pw
                #size_hint: 0.5, 0.8
                #multiline:True
                multiline:False
                #size_hint_y: None
                #height: 200

            MDLabel:
                text: 'Admin PW'

            MDTextField:
                id: admin_pw
                #size_hint: 0.5, 0.8
                #multiline:True
                multiline:False
                #size_hint_y: None
                #height: 200
